{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "types": ["node", "express", "express-session"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  